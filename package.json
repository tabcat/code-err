{
  "name": "coderra",
  "version": "1.0.0",
  "description": "a more intuitive err-code",
  "type": "module",
  "types": "./index.d.ts",
  "directories": {
    "test": "test"
  },
  "files": [
    "src",
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    }
  },
  "scripts": {
    "lint": "eslint src test",
    "build": "tsc",
    "postinstall": "npm run build",
    "test:node": "c8 -c ./test/.c8rc.json npx mocha --config ./test/.mocharc.json",
    "test:browser": "polendina --worker --serviceworker --cleanup --webpack-config webpack.config.ts.js test/test.ts",
    "test": "npm run lin && npm run test-node && npm run test-browser"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tabcat/coderra.git"
  },
  "keywords": [
    "err-code",
    "err",
    "code"
  ],
  "author": "tabcat <tabcat00@proton.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tabcat/coderra/issues"
  },
  "homepage": "https://github.com/tabcat/coderra#readme",
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/mocha": "^10.0.0",
    "c8": "^7.12.0",
    "chai": "^4.3.6",
    "eslint": "^8.24.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "mocha": "^10.0.0",
    "polendina": "^3.1.0",
    "resolve-typescript-plugin": "^1.2.0",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
